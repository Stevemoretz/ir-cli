{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "lib": ["es6"],
    "declaration": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "importHelpers": true,
  },
  "include": ["src"],
  "exclude": ["node_modules", "**/__tests__/*"]
}
