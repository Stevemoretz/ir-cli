{
  "name": "@steve-moretz/ir-cli",
  "description": "Central Framework's Cli",
  "version": "0.0.0",
  "license": "UNLICENSED",
  "type": "module",
  "main": "./dist/ir-cli.js",
  "bin": {
    "ir-cli": "./dist/ir-cli.js"
  },
  "scripts": {
    "test:ci": "jest --config jest.config.json --collectCoverage --coverageDirectory=\"./coverage\" --ci --reporters=default --reporters=jest-junit --watchAll=false",
    "build-production": "cross-env NODE_ENV=production npm run build",
    "audit": "lerna run audit --stream",
    "audit:depcheck": "lerna run audit:depcheck --stream",
    "audit:npm-check-updates": "npx npm-check-updates --errorLevel 1",
    "prebuild": "rimraf \"dist/**/!(ir-cli.js)\"",
    "build": "rollup -c",
    "create": "npm run build && npm run test",
    "local": "sudo npm uninstall -g && sudo npm install -g && ir-cli",
    "npm:format": "npx prettier-package-json --write package.json",
    "npm:upgrade": "npx npm-check-updates -iu",
    "refresh": "rm -rf ./node_modules ./package-lock.json && npm install",
    "start": "npm run build -- --watch",
    "test": "jest",
    "execute": "node ./dist/ir-cli.js",
    "format": "eslint \"**/*.{ts,js}\" --fix",
    "lint": "eslint \"**/*.{ts,js}\"",
    "prepare": "npm run build-production"
  },
  "dependencies": {
    "@rollup/plugin-typescript": "^8.3.2",
    "axios": "^0.27.2",
    "browser-sync": "^2.27.9",
    "chalk": "^4.1.0",
    "clear": "^0.1.0",
    "commander": "^9.1.0",
    "csv-parser": "^3.0.0",
    "csv-writer": "^1.6.0",
    "deepmerge": "^4.2.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "figlet": "^1.5.0",
    "filenamify": "^5.1.1",
    "generate-template-files": "^3.2.0",
    "globby": "11.0.4",
    "inquirer": "^8.2.4",
    "inquirer-press-to-continue": "^1.1.4",
    "json-diff": "^0.7.3",
    "json5": "^2.2.1",
    "lemmatizer": "^0.0.1",
    "log-update": "^5.0.0",
    "lookpath": "^1.2.2",
    "path": "^0.12.7",
    "pretty-format": "^27.5.1",
    "pretty-hrtime": "^1.0.3",
    "progress": "^2.0.3",
    "prompts": "^2.4.2",
    "request": "^2.88.2",
    "shelljs": "^0.8.5",
    "standard-version": "^9.3.2",
    "unzipper": "^0.10.11",
    "zip-local": "^0.3.5"
  },
  "devDependencies": {
    "@rollup/plugin-commonjs": "^21.0.2",
    "@rollup/plugin-node-resolve": "^13.1.3",
    "@types/clear": "^0.1.2",
    "@types/express": "^4.17.13",
    "@types/figlet": "^1.5.4",
    "@types/inquirer": "^8.2.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.32",
    "@typescript-eslint/eslint-plugin": "^5.7.0",
    "@typescript-eslint/parser": "^5.7.0",
    "@yelo/rollup-node-external": "^1.0.1",
    "cross-env": "^7.0.3",
    "depcheck": "^1.4.0",
    "eslint": "7.28.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "javascript-obfuscator": "^3.0.0",
    "jest": "^27.4.5",
    "jest-junit": "^13.1.0",
    "lerna": "^4.0.0",
    "nodemon": "^2.0.7",
    "prettier": "^2.5.1",
    "rollup": "^2.62.0",
    "rollup-plugin-cleanup": "^3.2.1",
    "rollup-plugin-dts": "^4.1.0",
    "rollup-plugin-notify": "^1.1.0",
    "rollup-plugin-polyfill-node": "^0.8.0",
    "rollup-plugin-preserve-shebangs": "^0.2.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "rollup-plugin-terser": "^7.0.2",
    "rollup-plugin-typescript2": "^0.31.1",
    "ts-jest": "^27.1.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.3",
    "uglify-js": "^3.14.5"
  },
  "keywords": [
    "cli",
    "nodejs",
    "ir-cli",
    "tcp",
    "typescript",
    "game"
  ],
  "prettier": {
    "tabWidth": 4,
    "semi": true,
    "bracketSpacing": false
  },
  "eslintConfig": {
    "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module"
    },
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/recommended",
      "plugin:prettier/recommended"
    ],
    "plugins": [
      "@typescript-eslint",
      "jest",
      "prettier"
    ],
    "rules": {
      "prettier/prettier": "warn",
      "jest/no-disabled-tests": "warn",
      "jest/no-focused-tests": "error",
      "jest/no-identical-title": "error",
      "jest/prefer-to-have-length": "warn",
      "jest/valid-expect": "error",
      "@typescript-eslint/ban-types": "warn",
      "@typescript-eslint/no-explicit-any": "off",
      "@typescript-eslint/ban-ts-comment": "off",
      "@typescript-eslint/no-empty-function": "warn",
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "warn"
      ]
    },
    "root": true,
    "parser": "@typescript-eslint/parser",
    "ignorePatterns": [
      "node_modules",
      "dist"
    ],
    "env": {
      "browser": true,
      "node": true,
      "jasmine": true,
      "jest/globals": true
    }
  }
}
